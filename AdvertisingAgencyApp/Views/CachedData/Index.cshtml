@model Lab4.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Cached Data";
}

<h1>Cached Data</h1>

<h2>Ad Types</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var adType in Model.AdTypes)
        {
            <tr>
                <td>@adType.Name</td>
                <td>@adType.Description</td>
            </tr>
        }
    </tbody>
</table>

<h2>Additional Services</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Cost</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var service in Model.AdditionalServices)
        {
            <tr>
                <td>@service.Name</td>
                <td>@service.Description</td>
                <td>@service.Cost</td>
            </tr>
        }
    </tbody>
</table>

<h2>Clients</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Address</th>
            <th>Phone Number</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var client in Model.Clients)
        {
            <tr>
                <td>@client.FirstName</td>
                <td>@client.LastName</td>
                <td>@client.Address</td>
                <td>@client.PhoneNumber</td>
            </tr>
        }
    </tbody>
</table>

<h2>Employees</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Position</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model.Employees)
        {
            <tr>
                <td>@employee.FirstName</td>
                <td>@employee.LastName</td>
                <td>@employee.Position</td>
            </tr>
        }
    </tbody>
</table>

<h2>Locations</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Ad Type</th>
            <th>Cost</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var location in Model.Locations)
        {
            <tr>
                <td>@location.Name</td>
                <td>@location.LocationDescription</td>
                <td>@location.AdType.Name</td>
                <td>@location.Cost</td>
            </tr>
        }
    </tbody>
</table>

<h2>Orders</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Order Date</th>
            <th>Client</th>
            <th>Employee</th>
            <th>Location</th>
            <th>Total Cost</th>
            <th>Paid</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Orders)
        {
            <tr>
                <td>@order.OrderDate</td>
                <td>@order.Client.FirstName @order.Client.LastName</td>
                <td>@order.Employee.FirstName @order.Employee.LastName</td>
                <td>@order.Location.Name</td>
                <td>@order.TotalCost</td>
                <td>@order.Paid</td>
            </tr>
        }
    </tbody>
</table>

<h2>Order Services</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Order Date</th>
            <th>Service</th>
            <th>Quantity</th>
            <th>Total Cost</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var orderService in Model.OrderServices)
        {
            <tr>
                <td>@orderService.Order.OrderDate</td>
                <td>@orderService.Service.Name</td>
                <td>@orderService.Quantity</td>
                <td>@orderService.TotalCost</td>
            </tr>
        }
    </tbody>
</table>

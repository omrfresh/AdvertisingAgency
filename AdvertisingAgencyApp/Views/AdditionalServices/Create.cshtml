@model Lab4.Models.AdditionalService

@{
    ViewData["Title"] = "Создание дополнительной услуги";
}

<h1 class="text-danger">Создание дополнительной услуги</h1>

<form asp-action="Create" class="mt-4">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" placeholder="Введите название" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" placeholder="Введите описание" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cost"></label>
        <input asp-for="Cost" class="form-control" placeholder="Введите стоимость" />
        <span asp-validation-for="Cost" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-danger">
        <i class="fas fa-plus"></i> Создать
    </button>
</form>

<a asp-action="Index" class="btn btn-secondary mt-2">
    <i class="fas fa-arrow-left"></i> Вернуться к списку
</a>
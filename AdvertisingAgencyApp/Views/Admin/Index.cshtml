@model IEnumerable<IdentityUser>
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager

<h2>Управление пользователями</h2>
<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>
                    <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-info">Просмотр</a> |
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning">Редактировать</a> |
                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Создать нового пользователя</a>
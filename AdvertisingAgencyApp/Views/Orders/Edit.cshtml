@model Lab4.Models.Order

@{
    ViewData["Title"] = "Редактирование заказа";
}

<h1 class="text-danger">Редактирование заказа</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="OrderId" />
    <div class="form-group">
        <label asp-for="OrderDate"></label>
        <input asp-for="OrderDate" class="form-control" />
        <span asp-validation-for="OrderDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ClientId"></label>
        <select asp-for="ClientId" class="form-control" asp-items="@(ViewData["ClientId"] as SelectList)"></select>
        <span asp-validation-for="ClientId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LocationId"></label>
        <select asp-for="LocationId" class="form-control" asp-items="@(ViewData["LocationId"] as SelectList)"></select>
        <span asp-validation-for="LocationId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EmployeeId"></label>
        <select asp-for="EmployeeId" class="form-control" asp-items="@(ViewData["EmployeeId"] as SelectList)"></select>
        <span asp-validation-for="EmployeeId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TotalCost"></label>
        <input asp-for="TotalCost" class="form-control" />
        <span asp-validation-for="TotalCost" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Paid"></label>
        <input asp-for="Paid" class="form-control" />
        <span asp-validation-for="Paid" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>

<a asp-action="Index" class="btn btn-secondary mt-2">Вернуться к списку</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

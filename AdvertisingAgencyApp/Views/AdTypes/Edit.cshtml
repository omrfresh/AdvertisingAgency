@model Lab4.Models.AdType

@{
    ViewData["Title"] = "Редактирование типа рекламы";
}

<h1 class="text-danger">Редактирование типа рекламы</h1>

<form asp-action="Edit" class="mt-4">
    <input type="hidden" asp-for="AdTypeId" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-danger">
        <i class="fas fa-save"></i> Сохранить
    </button>
</form>

<a asp-action="Index" class="btn btn-secondary mt-2">
    <i class="fas fa-arrow-left"></i> Вернуться к списку
</a>
@model Lab4.Models.OrderService

@{
    ViewData["Title"] = "Редактирование услуги заказа";
}

<h1 class="text-danger">Редактирование услуги заказа</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="OrderServiceId" />
    <div class="form-group">
        <label asp-for="OrderId"></label>
        <select asp-for="OrderId" class="form-control" asp-items="@(ViewData["OrderId"] as SelectList)"></select>
        <span asp-validation-for="OrderId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ServiceId"></label>
        <select asp-for="ServiceId" class="form-control" asp-items="@(ViewData["ServiceId"] as SelectList)"></select>
        <span asp-validation-for="ServiceId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TotalCost"></label>
        <input asp-for="TotalCost" class="form-control" />
        <span asp-validation-for="TotalCost" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>

<a asp-action="Index" class="btn btn-secondary mt-2">Вернуться к списку</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

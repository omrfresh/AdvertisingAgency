@model Lab4.Models.OrderService

@{
    ViewData["Title"] = "Создание услуги заказа";
}

<h1 class="text-danger">Создание услуги заказа</h1>

<form asp-action="Create" method="post" class="mt-4">
    <div class="form-group">
        <label asp-for="OrderId"></label>
        <select asp-for="OrderId" class="form-control" asp-items="@(ViewData["OrderId"] as SelectList)"></select>
        <span asp-validation-for="OrderId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ServiceId"></label>
        <select asp-for="ServiceId" class="form-control" asp-items="@(ViewData["ServiceId"] as SelectList)"></select>
        <span asp-validation-for="ServiceId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TotalCost"></label>
        <input asp-for="TotalCost" class="form-control" />
        <span asp-validation-for="TotalCost" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Создать</button>
</form>

<a asp-action="Index" class="btn btn-secondary mt-2">
    <i class="fas fa-arrow-left"></i> Вернуться к списку
</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

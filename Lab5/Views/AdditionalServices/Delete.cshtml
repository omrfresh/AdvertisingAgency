@model Lab4.Models.AdditionalService

@{
    ViewData["Title"] = "Удаление дополнительной услуги";
}

<h1 class="text-danger">Удаление дополнительной услуги</h1>

<h3>Вы уверены, что хотите удалить эту услугу?</h3>
<div class="alert alert-warning">
    <h4>@Model.Name</h4>
    <p>@Model.Description</p>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="AdditionalServiceId" />
    <button type="submit" class="btn btn-danger">
        <i class="fas fa-trash"></i> Удалить
    </button>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-times"></i> Отмена
    </a>
</form>
@model Lab4.Models.Location

@{
    ViewData["Title"] = "Редактирование локации";
}

<h1 class="text-danger">Редактирование локации</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="LocationId" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LocationDescription"></label>
        <input asp-for="LocationDescription" class="form-control" />
        <span asp-validation-for="LocationDescription" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cost"></label>
        <input asp-for="Cost" class="form-control" />
        <span asp-validation-for="Cost" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AdTypeId"></label>
        <select asp-for="AdTypeId" class="form-control" asp-items="@(ViewData["AdTypeId"] as SelectList)"></select>
        <span asp-validation-for="AdTypeId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AdDescription"></label>
        <input asp-for="AdDescription" class="form-control" />
        <span asp-validation-for="AdDescription" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">
        <i class="fas fa-save"></i> Сохранить
    </button>
</form>

<div>
    <a asp-action="Index" class="btn btn-secondary mt-2">Вернуться к списку</a>
</div>
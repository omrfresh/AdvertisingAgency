@model Lab4.Models.Order

@{
    ViewData["Title"] = "Подробности заказа";
}

<h1 class="text-danger">Подробности заказа</h1>

<div class="card mt-4 bg-light">
    <div class="card-body">
        <h4 class="card-title">@Model.OrderId</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Дата заказа</dt>
            <dd class="col-sm-10">@Model.OrderDate</dd>
            <dt class="col-sm-2">Дата начала</dt>
            <dd class="col-sm-10">@Model.StartDate</dd>
            <dt class="col-sm-2">Дата окончания</dt>
            <dd class="col-sm-10">@Model.EndDate</dd>
            <dt class="col-sm-2">Клиент</dt>
            <dd class="col-sm-10">@Model.Client.FirstName</dd>
            <dt class="col-sm-2">Локация</dt>
            <dd class="col-sm-10">@Model.Location.Name</dd>
            <dt class="col-sm-2">Сотрудник</dt>
            <dd class="col-sm-10">@Model.Employee.FirstName</dd>
            <dt class="col-sm-2">Стоимость</dt>
            <dd class="col-sm-10">@Model.TotalCost</dd>
            <dt class="col-sm-2">Оплачено</dt>
            <dd class="col-sm-10">@Model.Paid</dd>
        </dl>
    </div>
</div>

<a asp-action="Index" class="btn btn-secondary mt-2">Вернуться к списку</a>

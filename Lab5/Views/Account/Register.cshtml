@model Lab4.ViewModels.RegisterViewModel

<div class="container mt-5">
    <h2 class="text-center">Регистрация</h2>

    <form asp-action="Register" method="post" class="mt-4">
        <div class="form-group">
            <label asp-for="Email" class="font-weight-bold"></label>
            <input asp-for="Email" class="form-control" placeholder="Введите ваш email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="font-weight-bold"></label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Введите пароль" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword" class="font-weight-bold"></label>
            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Подтвердите пароль" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success btn-block">Зарегистрироваться</button>
    </form>

    <div class="text-center mt-3">
        <p>Уже есть аккаунт? <a asp-controller="Account" asp-action="Login">Войдите</a></p>
    </div>
</div>